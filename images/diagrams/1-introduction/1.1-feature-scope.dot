digraph FeatureScope {
    bgcolor="#1a1a2e"
    fontname="Helvetica"
    fontcolor="white"
    rankdir=TB
    splines=ortho
    nodesep=0.6
    ranksep=0.8

    node [
        fontname="Helvetica"
        fontsize=11
        fontcolor="white"
        color="#4ecdc4"
        fillcolor="#2d2d44"
        style="filled,rounded"
        shape=box
    ]

    edge [
        fontname="Helvetica"
        fontsize=9
        fontcolor="#888888"
        color="#4ecdc4"
        arrowsize=0.8
    ]

    // Central node
    aurora [
        label="Aurora 4X\nCore Simulation"
        shape=ellipse
        fillcolor="#4ecdc4"
        fontcolor="#1a1a2e"
        fontsize=14
        width=2
        height=1.2
    ]

    // Eight major subsystems
    research [
        label="Research &\nTechnology"
        fillcolor="#95d5b2"
        fontcolor="#1a1a2e"
    ]

    ship_design [
        label="Ship\nDesign"
        fillcolor="#95d5b2"
        fontcolor="#1a1a2e"
    ]

    ground_forces [
        label="Ground\nForces"
        fillcolor="#95d5b2"
        fontcolor="#1a1a2e"
    ]

    colonization [
        label="Colonization"
        fillcolor="#95d5b2"
        fontcolor="#1a1a2e"
    ]

    exploration [
        label="Exploration"
        fillcolor="#95d5b2"
        fontcolor="#1a1a2e"
    ]

    diplomacy [
        label="Diplomacy &\nEspionage"
        fillcolor="#95d5b2"
        fontcolor="#1a1a2e"
    ]

    tactical_combat [
        label="Tactical\nCombat"
        fillcolor="#95d5b2"
        fontcolor="#1a1a2e"
    ]

    terraforming [
        label="Terraforming"
        fillcolor="#95d5b2"
        fontcolor="#1a1a2e"
    ]

    // Connect all to center
    aurora -> research [dir=none]
    aurora -> ship_design [dir=none]
    aurora -> ground_forces [dir=none]
    aurora -> colonization [dir=none]
    aurora -> exploration [dir=none]
    aurora -> diplomacy [dir=none]
    aurora -> tactical_combat [dir=none]
    aurora -> terraforming [dir=none]

    // Feature boxes for each system
    research_features [
        label=<<table border="0" cellspacing="2" cellpadding="4">
            <tr><td bgcolor="#4ecdc4" align="center"><font color="#1a1a2e"><b>Features</b></font></td></tr>
            <tr><td align="left">• Hundreds of technologies</td></tr>
            <tr><td align="left">• Dozens of research fields</td></tr>
            <tr><td align="left">• Component unlocks</td></tr>
        </table>>
        shape=box
        fillcolor="#252545"
        color="#4ecdc4"
        fontsize=9
    ]

    ship_features [
        label=<<table border="0" cellspacing="2" cellpadding="4">
            <tr><td bgcolor="#4ecdc4" align="center"><font color="#1a1a2e"><b>Features</b></font></td></tr>
            <tr><td align="left">• Component-level design</td></tr>
            <tr><td align="left">• Engines, armor, weapons</td></tr>
            <tr><td align="left">• Crew and life support</td></tr>
        </table>>
        shape=box
        fillcolor="#252545"
        color="#4ecdc4"
        fontsize=9
    ]

    ground_features [
        label=<<table border="0" cellspacing="2" cellpadding="4">
            <tr><td bgcolor="#ff6b6b" align="center"><font color="#1a1a2e"><b>Features</b></font></td></tr>
            <tr><td align="left">• Infantry and armor</td></tr>
            <tr><td align="left">• Unit design system</td></tr>
            <tr><td align="left">• Planetary invasions</td></tr>
        </table>>
        shape=box
        fillcolor="#252545"
        color="#ff6b6b"
        fontsize=9
    ]

    colony_features [
        label=<<table border="0" cellspacing="2" cellpadding="4">
            <tr><td bgcolor="#ffe66d" align="center"><font color="#1a1a2e"><b>Features</b></font></td></tr>
            <tr><td align="left">• Atmospheric modeling</td></tr>
            <tr><td align="left">• Gravity and temperature</td></tr>
            <tr><td align="left">• Infrastructure building</td></tr>
        </table>>
        shape=box
        fillcolor="#252545"
        color="#ffe66d"
        fontsize=9
    ]

    explore_features [
        label=<<table border="0" cellspacing="2" cellpadding="4">
            <tr><td bgcolor="#4ecdc4" align="center"><font color="#1a1a2e"><b>Features</b></font></td></tr>
            <tr><td align="left">• Jump point networks</td></tr>
            <tr><td align="left">• Survey vessels</td></tr>
            <tr><td align="left">• Alien ruins discovery</td></tr>
        </table>>
        shape=box
        fillcolor="#252545"
        color="#4ecdc4"
        fontsize=9
    ]

    diplo_features [
        label=<<table border="0" cellspacing="2" cellpadding="4">
            <tr><td bgcolor="#95d5b2" align="center"><font color="#1a1a2e"><b>Features</b></font></td></tr>
            <tr><td align="left">• Trade agreements</td></tr>
            <tr><td align="left">• Treaty negotiations</td></tr>
            <tr><td align="left">• Intelligence ops</td></tr>
        </table>>
        shape=box
        fillcolor="#252545"
        color="#95d5b2"
        fontsize=9
    ]

    combat_features [
        label=<<table border="0" cellspacing="2" cellpadding="4">
            <tr><td bgcolor="#ff6b6b" align="center"><font color="#1a1a2e"><b>Features</b></font></td></tr>
            <tr><td align="left">• Individual weapon mounts</td></tr>
            <tr><td align="left">• Missile and beam combat</td></tr>
            <tr><td align="left">• Point defense layers</td></tr>
        </table>>
        shape=box
        fillcolor="#252545"
        color="#ff6b6b"
        fontsize=9
    ]

    terra_features [
        label=<<table border="0" cellspacing="2" cellpadding="4">
            <tr><td bgcolor="#ffe66d" align="center"><font color="#1a1a2e"><b>Features</b></font></td></tr>
            <tr><td align="left">• Multi-decade projects</td></tr>
            <tr><td align="left">• Gas modification</td></tr>
            <tr><td align="left">• Habitability scoring</td></tr>
        </table>>
        shape=box
        fillcolor="#252545"
        color="#ffe66d"
        fontsize=9
    ]

    // Connect feature boxes
    research -> research_features [style=dashed color="#666666" arrowsize=0.5]
    ship_design -> ship_features [style=dashed color="#666666" arrowsize=0.5]
    ground_forces -> ground_features [style=dashed color="#666666" arrowsize=0.5]
    colonization -> colony_features [style=dashed color="#666666" arrowsize=0.5]
    exploration -> explore_features [style=dashed color="#666666" arrowsize=0.5]
    diplomacy -> diplo_features [style=dashed color="#666666" arrowsize=0.5]
    tactical_combat -> combat_features [style=dashed color="#666666" arrowsize=0.5]
    terraforming -> terra_features [style=dashed color="#666666" arrowsize=0.5]

    // Layout hints
    {rank=same; research; ship_design}
    {rank=same; ground_forces; colonization}
    {rank=same; exploration; diplomacy}
    {rank=same; tactical_combat; terraforming}
}
